pipeline {
  agent any
  stages {
    stage('Build') {
      steps {
        sh '/root/apache-maven-3.5.3/bin/mvn clean package'
      }
      post {
        success {
          echo 'Now archiving...'
          archiveArtifacts artifacts: '**/target/*.war'
        }
        failure {
          echo 'Job failed, please check logs for details'
        }
      }
    }
    stage('Test') {
      steps {
        echo 'Testing'
      }
    }
    stage('Deploy') {
      steps {
        echo 'Deploying'
      }
    }
  }
}
