pipeline {
  agent any
  environment {
    JAVA_HOME = '/usr/java/jdk1.8.0_171-amd64/'
    PATH      = 'JAVA_HOME:$HOME/bin:/root/apache-maven-3.5.3/bin:$PATH'
  }
  stages {
    stage('Build') {
      steps {
        sh '/root/apache-maven-3.5.3/bin/mvn clean package'
      }
      post {
        success {
          echo 'Now archiving...'
          archiveArtifacts artifacts: '**/target/*.war'
        }
        failure {
          echo 'Job failed, please check logs for details'
        }
      }
    }

    stage('Test') {
      steps {
        echo 'Testing'
      }
    }

    stage('Deploy') {
      steps {
        echo 'Deploying'
      }
    }
  }
}
